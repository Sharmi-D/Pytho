# Linear Search
def linear_search(arr, target):
    for i in range(len(arr)):
        print(f"Comparing {target} with {arr[i]} at index {i}")
        if arr[i] == target:
            print(f"Target {target} found at index {i}.")
            return i
    print(f"Target {target} not found in the list.")
    return -1

# Binary Search
def binary_search(arr, target):
    low = 0
    high = len(arr) - 1

    while low <= high:
        mid = (low + high) // 2
        print(f"Current search range: indices {low} to {high}. Middle element: {arr[mid]} at index {mid}")

        if arr[mid] == target:
            print(f"Target {target} found at index {mid}.")
            return mid
        elif arr[mid] < target:
            print(f"{arr[mid]} is less than {target}. Shifting search to the right half.")
            low = mid + 1
        else:
            print(f"{arr[mid]} is greater than {target}. Shifting search to the left half.")
            high = mid - 1
    
    print(f"Target {target} not found in the list.")
    return -1


if __name__ == "__main__":
    my_list = input("Enter song to search:").split()
    target = input("Enter the target element to search:")
    print("List of array:", my_list)

    print("\n--- Linear Search ---")
    linear_search(my_list.copy(), target)

    print("\n--- Binary Search ---")
    sorted_list = sorted(my_list)
    print(f"Sorted list for binary search: {sorted_list}")
    binary_search(sorted_list.copy(), target)
