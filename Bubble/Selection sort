# Bubble Sort function
def bubble_sort(prices):
    n = len(prices)
    for i in range(n):
        for j in range(0, n-i-1):
            if prices[j] > prices[j+1]:
                prices[j], prices[j+1] = prices[j+1], prices[j]
    return prices

# Selection Sort function
def selection_sort(prices):
    n = len(prices)
    for i in range(n):
        min_index = i
        for j in range(i+1, n):
            if prices[j] < prices[min_index]:
                min_index = j
        prices[i], prices[min_index] = prices[min_index], prices[i]
    return prices

# Main Program
if __name__ == "__main__":
    # Taking grocery prices input from user
    prices = list(map(int, input("Enter grocery item prices separated by space: ").split()))

    print("\nOriginal Prices:", prices)

    method = input("Select sorting method (bubble/selection): ").strip().lower()

    if method == "bubble":
        sorted_prices = bubble_sort(prices.copy())
        print("Sorted Prices using Bubble Sort:", sorted_prices)
    elif method == "selection":
        sorted_prices = selection_sort(prices.copy())
        print("Sorted Prices using Selection Sort:", sorted_prices)
    else:
        print("Invalid method. Please select either 'bubble' or 'selection'.")
